{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@healthify/ui-kit": ["packages/ui-kit/src"],
      "@healthify/db": ["packages/db/src"],
      "@healthify/fhir-server": ["packages/fhir-server/src"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
