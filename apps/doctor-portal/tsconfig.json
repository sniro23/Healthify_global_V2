{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@ui/*": [
        "../../packages/ui-kit/src/components/ui/*"
      ],
      "@auth/*": [
        "../../packages/ui-kit/src/components/auth/*"
      ],
      "@ehr/*": [
        "../../packages/ui-kit/src/components/ehr/*"
      ],
      "@db/*": [
        "../../packages/db/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
